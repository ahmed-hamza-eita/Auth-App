<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AuthApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AuthApp" parent="Base.Theme.AuthApp" />

    <style name="FullScreen" parent="Base.Theme.AuthApp">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="toastStyle">
        <item name="stTextColor">@color/black</item>
        <item name="stTextSize">@dimen/_12ssp</item>
        <item name="stColorBackground">@color/white</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/white</item>
<!--        <item name="stIconStart">@drawable/logo</item>-->
        <item name="stLength">SHORT</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>